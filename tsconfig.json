{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "lib": ["es2017"],
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts"]
  }
  